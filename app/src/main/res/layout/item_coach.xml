<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:layout_weight="0"
                android:id="@+id/serial_no_text_view"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Srl No"
                android:textSize="14sp"
                android:textColor="@color/dark_grey_text_colour"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_grey_bg_2"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/coach_info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                tools:text="Own Rly - Coach Type - Coach No"
                />

            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prs_id"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_weight="0"
                android:id="@+id/prs_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                tools:text="PRS ID"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_weight="0"
                android:gravity="center"
                android:id="@+id/from_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Source"
                android:textSize="14sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/rounded_hollow_bg"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_weight="0"
                android:gravity="center"
                android:id="@+id/to_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Destination"
                android:textSize="14sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/rounded_hollow_bg"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/divider_horizontal_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remark"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/remark_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Remark"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dispute"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end|right"/>

            <CheckBox
                android:id="@+id/dispute_checkbox"
                android:layout_weight="0"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
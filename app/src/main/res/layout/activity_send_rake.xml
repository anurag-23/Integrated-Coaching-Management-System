<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/send_rake_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="8dp"
            android:paddingBottom="56dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_weight="0"
                        android:id="@+id/send_rake_train_no_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        tools:text="Srl No"
                        android:textSize="@dimen/typography_body"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/dark_grey_text_colour"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_grey_bg_2"/>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/send_rake_train_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/typography_title"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Train Name"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_weight="0"
                        android:id="@+id/send_rake_date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|end"
                        tools:text="Date"
                        android:textSize="@dimen/typography_body"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_move_to"
                            android:tint="@color/white"
                            android:alpha="0.54"
                            android:layout_marginRight="16dp"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/move_to"
                            android:textSize="@dimen/typography_subheading"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/station_radio_button"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/station_text_view"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/station"
                            android:textSize="@dimen/typography_subheading"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/yard_radio_button"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/yard_text_view"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yard"
                            android:textSize="@dimen/typography_subheading" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/select_station_yard_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/white"
                            android:alpha="0.54"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_station"/>

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/select_station_yard_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_station"
                            android:textSize="@dimen/typography_subheading"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <Spinner
                            android:layout_weight="0"
                            android:gravity="end|right"
                            android:id="@+id/station_yard_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/movement_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_date"
                            android:tint="@color/white"
                            android:alpha="0.54"
                            android:layout_marginRight="16dp"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movement_date"
                            android:textSize="@dimen/typography_subheading"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/movement_date_text_view"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/typography_subheading"
                            tools:text="Current Date"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"/>

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/white"
                            android:alpha="0.54"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/movement_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            android:tint="@color/white"
                            android:alpha="0.54"
                            android:layout_marginRight="16dp"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/movement_time"
                            android:textSize="@dimen/typography_subheading"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/movement_time_text_view"
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/typography_subheading"
                            tools:text="Current Time"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"/>

                        <ImageView
                            android:layout_weight="0"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/white"
                            android:alpha="0.54"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/show_consist_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/consist_details_text_view"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_consist_details"
                            android:textSize="@dimen/typography_subheading"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"/>

                        <ImageView
                            android:id="@+id/consist_hide_show_image_view"
                            android:layout_weight="0"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_down"
                            android:tint="@color/white"
                            android:alpha="0.54"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rake_consist_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_gravity="bottom">

        <Button
            android:elevation="8dp"
            android:id="@+id/send_rake_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/dark_grey_text_colour" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>